@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<form>
<LabeledInput Type="date" Label="Birthday" Value="@val"></LabeledInput>
<LabeledInput Type="color" Label="Favorite Color" Value="@val"></LabeledInput>
<submit @onclick="NewClick">Enter</submit>
</form>

<p>@val</p>

@code {
    public string val = String.Empty;

    private int i = 0;

    public void NewClick()
    {
        Console.WriteLine($"This is a click event({i})!!!");
        i++;
    }
}